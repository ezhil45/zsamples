<?xml version="1.0" encoding="UTF-8"?>
<project name="com.ibm.ws.samples.scala_sample" default="packageSamples">
	<import file="../ant_build/public_imports/fat_imports.xml" />
	<!-- is.sample forces the source to be included in the built archive. It is not strictly necessary as
	     we have "sample" in the project name but include it so that the source survives a rename! -->
	<property name="is.sample" value="true"/>
	<import file="../ant_build_samples/public_imports/sample_imports.xml"/>
	
	<target name="addAutoInstallApplications" description="Automatically Install applications on LibertyServer instance creation">
        <property name="published.files.dir" location="${basedir}/publish/files" />
        <property name="sample.apps.dir" location="${basedir}/publish/servers/ScalaSample/apps" />
        <property name="sample.shared.config.dir" location="${basedir}/samples/ScalaSample/wlp/usr/shared/config" />

        <!-- Add the sample app to the apps directory of the test server -->
        <mkdir dir="${sample.apps.dir}"/>
        
        <move file="${published.files.dir}/ScalaApp.zip" tofile="${sample.apps.dir}/ScalaApp.war" overwrite="true"/>		
    </target>

</project>