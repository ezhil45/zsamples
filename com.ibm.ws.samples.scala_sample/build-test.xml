<?xml version="1.0" encoding="UTF-8"?>
<project name="com.ibm.ws.samples.scala_sample" default="buildandrun" basedir=".">
	<property name="files.dir" value="${basedir}/publish/files" />
    <import file="build-sample.xml" />
    
    <target name="publishSampleFiles" depends="packageSamples">
    	<copy file="${basedir}/build/samples/ScalaSample.jar" toDir="${files.dir}" overwrite="true"/>
   	</target>

	<target name="localbuild" depends="publishSampleFiles">
    	<antcall target="fat_imports.localbuild" />
   	</target>
   	
   	<target name="addRequiredLibraries">
		<copy todir="${required.lib.dir}">
			<fileset dir="${basedir}/../fattest.samples/build/lib" includes="*.jar"/>
		</copy>
	</target>

</project>
